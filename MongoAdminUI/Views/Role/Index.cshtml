@model IEnumerable<MongoAdminUI.Models.RoleModel>

@{
    ViewData["Title"] = "Roles";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New Role</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Claims</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>@role.Description</td>
                <td>@role.Claims</td>
                <td>
                    <a asp-action="Edit" asp-route-roleName="@role.Name">Edit</a> |
                    <a asp-action="Delete" asp-route-roleName="@role.Name">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
